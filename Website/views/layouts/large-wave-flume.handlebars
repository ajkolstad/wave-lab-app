<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<link rel="stylesheet" href="/style.css">
<body class="bg-dark">
    <main class="index">
        <div class="blog-header py-3">
            <div class="jumbotron p-4 p-md-5 text-white rounded bg-dark">
                <div class="col-md-6 px-0">
                    <h1 class="display-5">Large Wave Flume</h1>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-lg-6 mb-3">
                    <div class="card h-100">
                        <div class="col p-4 d-flex flex-column position-static">
                            <h5 class="d-inline-block mb-2 text-primary">Current Status</h5>
                            <h1 class="mb-2 text-dark">{{flumeDepth}}</h1>
                            <h2 class="mb-4 text-muted">{{flumeProg}}</h2>
                            <h2 class="mb-4 text-success">{{timeRemaining}}</h2>
                            <h5 class="mb-2 text-info">{{flumeTime}}</h5>
                            <h5 class="mb-1 text-info">{{flumeUser}}</h5>
                            <h5 class="mb-1 text-info">{{flumeTimeElapsed}}</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mb-3">
                    <div class="card">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/ciioaETC6wE?autoplay=1&mute=1&controls=0&modestbranding" allowfullscreen></iframe>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-2 justify-content-center">
                <div class="col-lg-6 mb-3">
                    <div class="card">
                        <canvas id="myChart" width="250" height="250"></canvas>
                            <script>
                                var times = "{{times}}".split(',');
                                var depths = "{{depths}}".split(',');
                                console.log(times);
                                console.log(depths);
                                var ctx = document.getElementById('myChart').getContext('2d');
                                var myChart = new Chart(ctx, {
                                    type: 'line',
                                    data: {
                                        labels: times,
                                        datasets: [{
                                            label: 'Depth in meters',
                                            data: depths,
                                            borderColor: 'rgb(0, 0, 0)',
                                            tension: 0.1
                                        }]
                                    },
                                    options: {
                                        responsive: true,
                                        maintainAspectRatio: false,
                                        scales: {
                                            y: {
                                                beginAtZero: true
                                            }
                                        }
                                    }
                                });
                            </script>
                    </div>
                </div>
                {{#if message}}
                <div class="col-lg-6 mb-3">
                    <div class="card h-100">
                        <form  action="/auth/large-wave-flume" method="POST">
                            <div class="col p-4 d-flex flex-column position-static">
                                <h5 class="d-inline-block mb-2 text-primary">Set New Target</h5>
                                <div class="form-group">
                                    <label for="inputDepthTarget">Depth Target</label>
                                    <input type="number" class="form-control" type="number"id="inputDepthTarget" placeholder="0.5" name="depthTarget" step=".01">
                                </div>
                                <div class="form-group">
                                    <label for="inputOffset">Hour Offset</label>
                                    <select id="inputState" class="form-control" name="timeOffset">
                                        <option selected>0</option>
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                        <option>5</option>
                                        <option>6</option>
                                        <option>7</option>
                                        <option>8</option>
                                        <option>9</option>
                                        <option>10</option>
                                        <option>11</option>
                                        <option>12</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Set Target</button>
                            </div>
                        </form>
                    </div>
                </div>
                {{/if}}
                <div class="col-lg-6 mb-3">
                    <div class="card">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/V3JsFPQA6YQ?autoplay=1&mute=1&controls=0&modestbranding" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mb-3">
                    <div class="card">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/VCluhS3RJpI?autoplay=1&mute=1&controls=0&modestbranding" allowfullscreen></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>

</html>



